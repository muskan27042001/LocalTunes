<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/more_features_background">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/songInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_info_24"
            app:tint="@color/white"
            android:layout_margin="8dp"
            android:contentDescription="@string/min_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="song Info"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/removeSong"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/remove_icon"
            app:tint="@color/white"
            android:layout_margin="8dp"
            android:contentDescription="@string/min_30" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Remove Song"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addToPlayNext"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/play_next_icon"
            app:tint="@color/white"
            android:layout_margin="8dp"
            android:contentDescription="@string/min_30" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Play Next"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>